@page
@model LoginModel


<div class="container-fluid p-0 m-0 " style="height: 100vh !important;">
    @*@{
            ViewData["Title"] = "Log in";
        }

        <h1>@ViewData["Title"]</h1>*@

    <div class="row w-100 p-0 m-0 h-100">
        <div class="col-4 bg-white text-center">
            <section>
                <form id="account" method="post">
                    <h2>Log in</h2>
                    <br />
                    <br />

                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Log in</button>
                    </div>
                    @*<div class="form-group">
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                        </p>
                        <p>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                        </p>
                    </div>*@
                </form>
            </section>
        </div>
        <div class="col-8 oi-justify-center text-center align-content-center" style="background-image:none;background-color:whitesmoke;">
            <div style="width:auto;height:150px">

            </div>
            <div>
                <img src="/css/brand.png" style="text-align:center" />
            </div>

        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
