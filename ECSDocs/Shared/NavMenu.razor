<div class="container" style="
        text-align: center;
        align-items: center;
        justify-content: center;
        display:  flex;
        width: 160px;
        height: 100px;">
    <Figure Size="FigureSize.Is96x96" class="text-center">
        <FigureImage Source="/css/brand.png" AlternateText="128x128" Style="text-align:center" />
    </Figure>


</div>


<MatNavMenu>
    <MatNavItem Href="/">
        <MatIcon Icon="home"></MatIcon> Home
    </MatNavItem>

    <MatNavSubMenu @bind-Expanded="@navSubMenuOpenState">
        <MatNavSubMenuHeader>
            <MatNavItem AllowSelection="false"><MatIcon Icon="router"></MatIcon> VPN</MatNavItem>
        </MatNavSubMenuHeader>
        <MatNavSubMenuList>
            <MatNavItem Href="/vpncustomerlist"><MatIcon Icon="list"></MatIcon>Customers</MatNavItem>

            <AuthorizeView>
                <Authorized>
                    @if (@context.User.IsInRole(ADMINISTRATION_ROLE))
                    {
                        <MatNavItem Href="/addVpnCustomer"><MatIcon Icon="person_add"></MatIcon> Add VPN Customer</MatNavItem>
                    }
                </Authorized>
            </AuthorizeView>
        </MatNavSubMenuList>
    </MatNavSubMenu>
    <MatNavSubMenu @bind-Expanded="@apnNavOpenState">
        <MatNavSubMenuHeader>
            <MatNavItem AllowSelection="false"><MatIcon Icon="sim_card"></MatIcon> APN</MatNavItem>
        </MatNavSubMenuHeader>
        <MatNavSubMenuList>
            <MatNavItem Href="/apncustomerlist"><MatIcon Icon="list"></MatIcon>Customers</MatNavItem>

            <AuthorizeView>
                <Authorized>
                    @if (@context.User.IsInRole(ADMINISTRATION_ROLE))
                    {
                        <MatNavItem Href="/addApnCustomer"><MatIcon Icon="person_add"></MatIcon> Add Customer</MatNavItem>
                    }
                </Authorized>
            </AuthorizeView>
        </MatNavSubMenuList>
    </MatNavSubMenu>
    <MatNavSubMenu @bind-Expanded="@IntrNavOpenState">
        <MatNavSubMenuHeader>
            <MatNavItem AllowSelection="false"><MatIcon Icon="device_hub"></MatIcon> Intranet</MatNavItem>
        </MatNavSubMenuHeader>
        <MatNavSubMenuList>
            <MatNavItem Href="/intranetcustomerlist"><MatIcon Icon="list"></MatIcon>Customers</MatNavItem>

            <AuthorizeView>
                <Authorized>
                    @if (@context.User.IsInRole(ADMINISTRATION_ROLE))
                    {
                        <MatNavItem Href="/addIntranetCustomer"><MatIcon Icon="person_add"></MatIcon> Add Customer</MatNavItem>
                    }
                </Authorized>
            </AuthorizeView>
        </MatNavSubMenuList>
    </MatNavSubMenu>

    <MatNavItem Href="/administration">
        <MatIcon Icon="settings"></MatIcon> Administration
    </MatNavItem>
</MatNavMenu>


@code {


    string ADMINISTRATION_ROLE = "Administrators";
    private bool collapseNavMenu = true;
    private bool expandSubNav;
    [Inject] IJSRuntime JS { get; set; }

    bool navSubMenuOpenState; bool apnNavOpenState; bool IntrNavOpenState;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    async Task ClickMe()
    {
        Console.WriteLine("test");
        await JS.InvokeAsync<object>("alert", "Successful OnClick!");
    }

}
